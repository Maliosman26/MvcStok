@using MvcStok.Models.Entity
@model  List<TBLURUNLER>

@{
    ViewBag.Title = "Urun";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th>ÜRÜN ID</th>
        <th>ÜRÜN ADI</th>
        <th>MARKASI</th>
        <th>KATEGORİ</th>
        <th>FİYAT</th>
        <th>STOK</th>
        <th>SİL</th>
        <th>GÜNCELLE</th>
    </tr>
    <tbody>
        @foreach (var urun in Model)
        {
        <tr>
            <th>@urun.URUNID</th>
            <td>@urun.URUNAD</td>   
            <td>@urun.MARKA</td>
            <td>@urun.TBLKATEGORILER.KATEGORIAD</td>
            <td>@urun.FIYAT</td>
            <td>@urun.STOK</td>
            <td><a href="/URUN/URUNSIL/@urun.URUNID" class="btn btn-danger">SİL</a></td>
            <td><a href="/URUN/URUNGUNCELLE/@urun.URUNID" class="btn btn-success">GÜNCELLE</a></td>
        </tr>
        }
    </tbody>
</table>
<a href="/URUN/YENIURUN/" class="btn btn-primary">YENİ ÜRÜN EKLE</a>
